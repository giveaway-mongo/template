{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../config",
        "outDir": "./dist/config"
      },
      {
        "include": "../protos/**/*.proto",
        "outDir": "./dist/protos/"
      },
      {
        "include": "../prisma",
        "outDir": "./dist/prisma"
      }
    ],
    "watchAssets": true
  }
}
