{
  "name": "sample-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e .env.test -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "p:generate": "npx prisma generate",
    "p:migrate": "dotenv -e .env.test -- npx prisma migrate dev",
    "migrate:dev": "dotenv -e .env.test -- npx prisma migrate dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "protogen": "protogen.sh",
    "mongo:start": "docker-compose -f docker-compose.mongo.yaml up",
    "test:cov": "jest --coverage",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "test:docker-e2e": "dotenv -e .env.docker-test -- jest --config ./test/jest-e2e.json",
    "test:db-push": "dotenv -e .env.test -- npx prisma db push --force-reset",
    "docker:build": "docker build -f Dockerfile.test -t app . && docker-compose -f docker-compose.test.yaml run app"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.14",
    "@grpc/proto-loader": "^0.7.6",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/microservices": "^9.4.0",
    "@nestjs/devtools-integration": "^0.1.4",
    "@nestjs/platform-express": "^9.4.0",
    "@prisma/client": "^4.13.0",
    "amqp-connection-manager": "^4.1.12",
    "amqplib": "^0.10.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "long": "4.0.0",
    "protobufjs": "^7.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-proto": "^1.146.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.2",
    "@nestjs/mapped-types": "^1.2.2",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "29.2.4",
    "@types/long": "^4.0.2",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.1.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.3.1",
    "prettier": "^2.8.8",
    "prisma": "^4.13.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.5",
    "webpack": "^5.80.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
